						<% @fund_records.each do |fr| %>

							<% if fr.wr4 > 0 %>
							<% color = "up" %>
							<% elsif fr.wr4 == 0 %>
							<% color = "stable" %>
							<% else %>
							<% color = "down" %>
							<% end %>

							
							 <tr class= "<%=color %> fund_details_row" >
