	<%= form_for @search_string, :method => 'get' do  %>

		<%= hidden_field_tag "continent", @view_item  %>
		<%= hidden_field_tag "investment_sector", @investment_sector  %>

		 <h4>Salty dog groups</h4>
		<% @groups_selectable.each do |a| %>

			<%= check_box_tag("groups[]", a[0], @groups.include?(a[0].to_s), class: "sl_group") %>
	
    		<%=h "#{a[1]}(#{a[2]})" %>
		<% end %>

		<h4>Time selection</h4>

		<% ["4", "12", "26"].each do |t| %>

			<% if @time == t %>

	

				<%=radio_button_tag "time", t, true %>

			<% else %>

				<%=radio_button_tag "time", t, false %>
				
			<% end %>
			<%=h t %>
		<% end %>

		<h4>Rate or decile</h4>
		<% ["Rate", "Decile"].each do |c| %>

			<% if @measure.to_s == c %>
			
				<%=radio_button_tag "measure", c , true %>
			<% else %>
			
				<%=radio_button_tag "measure", c , false %>
			<% end %>
			<%=h c %>
		<% end %>
		<br/>
		<%= submit_tag "Apply filter", :name=> nil, class: "btn btn-info" %>
	<% end %>

