    

<div class="row">
	<div class= "col-sm-2">
		<h2>Selection</h2>
		<h3>Continents</h3>

		<%= hidden_field_tag "map_to_use", @view_item  %>
		<%= hidden_field_tag "search_string", @search_string  %>
		<%= hidden_field_tag "map_title", @title  %>

		<nav>
			<ul>
			<li><%= link_to "Home", "/home/show_area?continent=home", class: "up" %></li>
				<% if @continents.count == 1 %>
					<li><%= link_to @continents[0], "#", class: @stats[@continents[0]][2], data:{toggle: "tooltip", placement: "right"}, title: @stats[@continents[0]][0] %><span>(<%= @stats[@continents[0]][1]%>)</span></li>
				<% else %>
					<% @continents.each do |c| %>
						<li><%= link_to c, "/home/show_area?continent="+c, class: @stats[c][2], data:{toggle: "tooltip", placement: "right"}, title: @stats[c][0] %><span>(<%=@things[c]["value"] %>)</span></li>
				
					<% end %>
				<% end %>
			</ul>
		</nav>
		<h3>Investment Sectors</h3>
		<nav>
			<ul>
				<% @sectors.each do |s| %>
					<li><%=link_to s, "/home/show_investment_sector?investment_sector="+s,class: @stats[s][2], data:{toggle: "tooltip", placement: "right"}, title: @stats[s][0]  %><span>(<%=@stats[s][1]%>)</span></li>
				<% end %>
			</ul>
		</nav>
	</div>

	<div class = "col-sm-6">
		<div id="container">
		    <div class="loading">
		        <i class="icon-spinner icon-spin icon-large"></i>
		        Loading data from Google Spreadsheets...
		    </div>
		 </div>
	</div>
	<div class= "col-sm-4" >
		<h3>Funds and Performance last 4 weeks</h3>


	<div id="table-wrapper">
	  <div id="table-scroll">

		<table class="table-bordered"  >
		  <tr>
		    <th>Name</th>
		    <th>Rate Movement(4)</th>
		    <th>Sector Performance</th>
		  </tr>
		 
			<% @fund_records.each do |fr| %>

				<% if fr.wr4 > 0 %>
				<% color = "up" %>
				<% elsif fr.wr4 == 0 %>
				<% color = "stable" %>
				<% else %>
				<% color = "down" %>
				<% end %>

				<% if fr.d1 > fr.d2 %>
				<% sec_text = "Rising" %>
				<% elsif fr.d1 == fr.d2 %>
				<% sec_text = "Stable" %>
				<% else %>
				<% sec_text = "Falling" %>
				<% end %>

				
				 <tr>
				    <td><%= link_to fr.fund_name, "#", class: color %></td>
				    <td><%=fr.wr4 %></td>
				    <td><%= sec_text %></td>
				  </tr>

			<!-- 	<li>


					<%= link_to fr.fund_name, "#", class: color %><span class= <%=color%> ><%=fr.wr4 %></span>




				</li> -->
			<% end %>
	
			<!-- </ul> -->
		</table>
	</div>
</div>
	</div>
</div>