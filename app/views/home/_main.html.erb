
<div class="row">
	<div class= "col-sm-2">
		<%= hidden_field_tag "search_string", @search_string  %>
		<%= hidden_field_tag "map_title", @title  %>
		<%= hidden_field_tag "continent", @view_item  %>
	


		<div id="things", data-stats= "<%=@things%>" %></div>


		<h4 class="text-center">Investment Sectors</h3>
		<nav>
			<ul>
				<% @sectors.each do |s| %>
					<li><%=link_to s[0], "/home/show_investment_sector?investment_sector="+s[1],class: @stats[s[0]][2], data:{toggle: "tooltip", placement: "right"}, title: @stats[s[0]][0]  %><span>(<%=@stats[s[0]][1]%>)</span></li>
				<% end %>
			</ul>
		</nav>
	</div>

	<div class = "col-sm-6">
		<div id="container">
		    <div class="loading">
		        <i class="icon-spinner icon-spin icon-large"></i>
		        Loading data....
		    </div>
		 </div>

			<%= link_to "Home", "/home/show_area?continent=home", class: "up" %></li>
				<% if @continents.count == 1 %>
					<%= link_to @continents[0], "/home/show_area?continent="+@continents[0], class: @stats[@continents[0]][2], data:{toggle: "tooltip", placement: "right"}, title: @stats[@continents[0]][0] %><span>(<%= @stats[@continents[0]][1]%>)</span>
				<% else %>
					<% @continents.each do |c| %>
						<%= link_to c, "/home/show_area?continent="+c, class: @stats[c][2], data:{toggle: "tooltip", placement: "right"}, title: @stats[c][0] %><span>(<%=@things_view[c]["value"] %>)</span>
				
					<% end %>
				<% end %>
			



	<%= form_for @search_string, :method => 'get' do  %>

		<%= hidden_field_tag "continent", @view_item  %>
		<%= hidden_field_tag "investment_sector", @investment_sector  %>

		 <h4>Salty dog groups</h4>
		<% @groups_selectable.each do |a| %>

			<%= check_box_tag("groups[]", a[0], @groups.include?(a[0].to_s), class: "sl_group") %>
	
    		<%=h "#{a[1]}(#{a[2]})" %>
		<% end %>

		<h4>Time selection</h4>

		<% ["4", "12", "26"].each do |t| %>

			<% if @time == t %>

	

				<%=radio_button_tag "time", t, true %>

			<% else %>

				<%=radio_button_tag "time", t, false %>
				
			<% end %>
			<%=h t %>
		<% end %>

		<h4>Rate or decile</h4>
		<% ["Rate", "Decile"].each do |c| %>

			<% if @measure.to_s == c %>
			
				<%=radio_button_tag "measure", c , true %>
			<% else %>
			
				<%=radio_button_tag "measure", c , false %>
			<% end %>
			<%=h c %>
		<% end %>
		<br/>
		<%= submit_tag "Apply filter", :name=> nil, class: "btn btn-info" %>
	<% end %>

	</div>
	<div class= "col-sm-4" >
		<h3>Funds and Performance last 4 weeks</h3>

			<div id="constrainer">
    			<div class="scrolltable">
				

					<table class="table-bordered header"  >
					  <tr>
					    <th width="30%">Name</th>
					    <th width="15%">Rate Change(4)</th>
					    <th width="20%">Sector Perf.</th>
					    <th width="25%">SaltyDog Grp</th>
					  </tr>
					</table>
					  <div class="body">
					  	<table class="table-bordered body">
						<% @fund_records.each do |fr| %>

							<% if fr.wr4 > 0 %>
							<% color = "up" %>
							<% elsif fr.wr4 == 0 %>
							<% color = "stable" %>
							<% else %>
							<% color = "down" %>
							<% end %>

							<% if fr.d1 < fr.d2 %>
							<% sec_text = "Rising" %>
							<% elsif fr.d1 == fr.d2 %>
							<% sec_text = "Stable" %>
							<% else %>
							<% sec_text = "Falling" %>
							<% end %>

							
							 <tr class= "<%=color %>" >
							 	<td style="display:none;"><%=fr.fund_id %></td>
							    <td width="30%"><span class="glyphicon glyphicon-star-empty clickable-div blank-star"></span><%= link_to fr.fund_name, "#" %></td>
							    <td class="text-center" width="15%"><%=fr.wr4 %>%</td>
							    <td width="20%"><%= sec_text %></td>
							    <td  width="25%"><%=fr.saltydog_group %></td>
							  </tr>

						<% end %>
				
						<!-- </ul> -->
					</table>
					</div>
				</div>
			</div>

			<h3>Selected funds</h3>
			
			<div id="constrainer">
    			<div class="scrolltable">

					<table class="table-bordered" >
					  <tr>
					    <th width="30%">Name</th>
					    <th width="15%">Rate Change(4)</th>
					    <th width="20%">Sector Perf.</th>
					    <th width="25%">SaltyDog Grp</th>
					  </tr>
					 </table>
					  <div class="body">
					 <table id="selected_funds">
							
							 

					
				
						<!-- </ul> -->
					</table>
				</div>
				</div>
			</div>

	



	</div>
</div>