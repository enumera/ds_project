
<div class="row">
	<div class= "col-sm-2">
		<h2 >Selection</h2>
		<h3 class="text-center">Continents</h3>

		<%= hidden_field_tag "search_string", @search_string  %>
		<%= hidden_field_tag "map_title", @title  %>
		<%= hidden_field_tag "continent", @view_item  %>
		<div id="things", data-stats= "<%=@things%>" %></div>

		<nav>
			<ul>
			<li><%= link_to "Home", "/home/show_area?continent=home", class: "up" %></li>
				<% if @continents.count == 1 %>
					<li><%= link_to @continents[0], "/home/show_area?continent="+@continents[0], class: @stats[@continents[0]][2], data:{toggle: "tooltip", placement: "right"}, title: @stats[@continents[0]][0] %><span>(<%= @stats[@continents[0]][1]%>)</span></li>
				<% else %>
					<% @continents.each do |c| %>
						<li><%= link_to c, "/home/show_area?continent="+c, class: @stats[c][2], data:{toggle: "tooltip", placement: "right"}, title: @stats[c][0] %><span>(<%=@things_view[c]["value"] %>)</span></li>
				
					<% end %>
				<% end %>
			</ul>
		</nav>
		<h3 class="text-center">Investment Sectors</h3>
		<nav>
			<ul>
				<% @sectors.each do |s| %>
					<li><%=link_to s[0], "/home/show_investment_sector?investment_sector="+s[1],class: @stats[s[0]][2], data:{toggle: "tooltip", placement: "right"}, title: @stats[s[0]][0]  %><span>(<%=@stats[s[0]][1]%>)</span></li>
				<% end %>
			</ul>
		</nav>
	</div>

	<div class = "col-sm-6">
		<div id="container">
		    <div class="loading">
		        <i class="icon-spinner icon-spin icon-large"></i>
		        Loading data....
		    </div>
		 </div>


	<%= form_for @search_string, :method => 'get' do  %>

		<%= hidden_field_tag "continent", @view_item  %>
		<%= hidden_field_tag "investment_sector", @investment_sector  %>

		 <h4>Salty dog groups</h4>
		<% SaltydogGroup.all.each do |a| %>
    		<%= check_box_tag("groups[]", a.id) %>
    		<%=h a.name %>
		<% end %>

		<h4>Time selection</h4>

		<% ["4", "12", "26"].each do |t| %>
			<%=radio_button_tag "time", t %>
			<%=h t %>
		<% end %>

		<h4>Rate or decile</h4>
		<% ["Rate", "Decile"].each do |c| %>
			<%=radio_button_tag "measure", c %>
			<%=h c %>
		<% end %>
		<br/>
		<%= submit_tag "Apply filter", :name=> nil %>
	<% end %>

	</div>
	<div class= "col-sm-4" >
		<h3>Funds and Performance last 4 weeks</h3>


	<div id="table-wrapper">
	  <div id="table-scroll">

		<table class="table-bordered"  >
		  <tr>
		    <th>Name</th>
		    <th>Rate Movement(4)</th>
		    <th>Sector Performance</th>
		    <th>SaltyDog Group</th>
		  </tr>
		 
			<% @fund_records.each do |fr| %>

				<% if fr.wr4 > 0 %>
				<% color = "up" %>
				<% elsif fr.wr4 == 0 %>
				<% color = "stable" %>
				<% else %>
				<% color = "down" %>
				<% end %>

				<% if fr.d1 > fr.d2 %>
				<% sec_text = "Rising" %>
				<% elsif fr.d1 == fr.d2 %>
				<% sec_text = "Stable" %>
				<% else %>
				<% sec_text = "Falling" %>
				<% end %>

				
				 <tr>
				    <td><%= link_to fr.fund_name, "#", class: color %></td>
				    <td><%=fr.wr4 %></td>
				    <td><%= sec_text %></td>
				    <td><%=fr.saltydog_group %></td>
				  </tr>

			<!-- 	<li>


					<%= link_to fr.fund_name, "#", class: color %><span class= <%=color%> ><%=fr.wr4 %></span>




				</li> -->
			<% end %>
	
			<!-- </ul> -->
		</table>
	</div>
</div>
	</div>
</div>